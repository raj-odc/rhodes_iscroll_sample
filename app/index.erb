<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>/">

  <div data-role="header" data-position="inline">
    <h1>iscrollDemo</h1>
    <% if SyncEngine::logged_in > 0 %>
    <a href="<%= url_for :controller => :Settings, :action => :do_sync %>" class="ui-btn-left" data-icon="refresh">
      Sync
    </a>
    <a href="<%= url_for :controller => :Settings, :action => :logout %>" class="ui-btn-right" data-icon="star">
	    Logout
	  </a>
    <% else %>
        <a href="<%= url_for :controller => :Settings, :action => :login %>" class="ui-btn-right" data-icon="star">Login</a>
    <% end %>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <li><a href="/app/Iscroll/custom_iscroll" data-ajax="false" >Vertical Iscroll</a></li>
	  <li><a href="/app/Iscroll/horizontal_iscroll" data-ajax="false">Horizontal Iscroll</a></li>
	  <li><a href="/app/Iscroll/carousel_iscroll" data-ajax="false">Carousel Iscroll</a></li>
	  <li><a href="/app/Iscroll/fixed_height_div" data-ajax="false">Iscroll Inside Fixed Height div</a></li>
	  
    </ul>
  </div>

</div>
